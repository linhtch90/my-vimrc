"----- Vim Plug -----
call plug#begin('~/.vim/plugged')

"Gruvbox theme
Plug 'morhetz/gruvbox'

"NERD Tree
Plug 'scrooloose/nerdtree'

"Vim-Airline
Plug 'vim-airline/vim-airline'

"CtrlP
Plug 'ctrlpvim/ctrlp.vim'

"Emmet
Plug 'mattn/emmet-vim'

"Prettier
Plug 'prettier/vim-prettier'

"Vim-Javascript
Plug 'pangloss/vim-javascript'

"Indent line
Plug 'yggdroot/indentline'

"Colorizer
Plug 'chrisbra/colorizer'

"HTML5
Plug 'othree/html5.vim'

"CSS3
Plug 'hail2u/vim-css3-syntax'

call plug#end()

"----- User-defined settings -----

syntax on " Enable syntax highlighting.
filetype plugin indent on " Enable file type based indentation.
set autoindent " Respect indentation when starting a new line.
set expandtab " Expand tabs to spaces. Essential in Python.
set tabstop=4 " Number of spaces tab is counted for.
set shiftwidth=4 " Number of spaces to use for autoindent.
set backspace=2 " Fix backspace behavior on most terminals.
colorscheme gruvbox " Change a colorscheme.
set background=dark "Change background to dark mode.
set guifont=Hack:h10:cANSI "Change default font.
filetype plugin on "Enable OmniComplete.
set omnifunc=syntaxcomplete#Complete "Enable OmniComplete.

